broadlink_remote_learn_light_commands:
  alias: "Zimmer Lerne Licht Kommandos"
  icon: hue:ceiling-aurelle
  sequence:
    - service: remote.learn_command
      target:
        entity_id: remote.broadlink_rm4c_mini_remote
      data:
        device: light
        command:
          - turn on
          - turn off
          - rgb
          - lamp
          - gradual
          - jumpy

